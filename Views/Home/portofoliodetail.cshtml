                    </a>
                </li>
            </ul>
        </div>
    </div>
    <!-- SUBHEADER
    ================================================== -->
    <div id="subheader">
        <div class="row">
            <div class="twelve columns">
                <p class="left">
                    INSTRUMENT DETAILS
                </p>


            @if(Session["User"]!=null)
            {
                User user=(User)Session["User"];
            <p class="right">
                <a href="@Url.Action("MyCart", "Home", new { Name=@Model.Name, UserId=@user.Id})">Add to Cart</a>
            </p>
            }
        </div>
    </div>
        </div>
    <div class="hr">
    </div>
    <!-- CONTENT
    ================================================== -->
    <div class="row">
        <!-- PROJECT DESCRIPTION-->
        <div class="six columns">
            <div class="sectiontitle">
                <h4>@Model.Name</h4>
            </div>
            <p style="font-size:medium">
                @Model.Description
            </p>
            <dl class="tabs">
                <dd class="active"><a href="#simple1">Features</a></dd>
                <dd><a href="#simple2">Price</a></dd>
                <dd><a href="#simple3">Minimum Quantity</a></dd>
            </dl>
            <ul class="tabs-content">
                <li class="active" id="simple1Tab">
                    <p style="font-size:medium">
                        @Model.Description
                    </p>

                </li>
                <li id="simple2Tab">
                    <p style="font-size:medium">
                        @Model.Price
                    </p>
                    <!--<p>
